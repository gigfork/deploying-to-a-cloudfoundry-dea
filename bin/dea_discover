#!/usr/bin/env ruby

require "nats/client"
require "json"

NATS.start do
  NATS.subscribe('>') { |msg, reply, sub| puts "Msg received on [#{sub}] : '#{msg}'" }
  message = {
    'runtime_info' => {
      'name' => 'ruby19',
      'executable' => 'ruby',
      'version_output' => 'ruby 1.9.3p286'
    },
    'limits' => {
      'mem' => 256
    },
    'droplet' => 'DROPLET_ID_1234'
  }
  NATS.request('dea.discover', message.to_json) do |response|
    puts "Got dea.discover response: #{response}"
  end
end
# OUTPUT:
# Msg received on [dea.discover] : '{"runtime_info":{"name":"ruby19","executable":"ruby","version_output":"ruby 1.9.3p286"},"limits":{"mem":256},"droplet":"DROPLET_ID_1234"}'
# Got dea.discover response: nil
